{% set entity_name = _self|extractEntityNameByPath %}
<li {{ stimulus_controller('collapsible') }} class="relative collapsible">
    <a {{ stimulus_action('collapsible','click') }} class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-700 text-ellipsis whitespace-nowrap rounded hover:text-blue-600 hover:bg-blue-50 transition duration-300 ease-in-out cursor-pointer">
        {{ source('@public_path'~'/build/images/'~entity_name~'.svg') }}
        <span>{{ entity_name|capitalize }}s</span>
        <svg focusable="false" class="w-3 h-3 ml-auto" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <path fill="currentColor" d="M207.029 381.476L12.686 187.132c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.357-9.357 24.522-9.375 33.901-.04L224 284.505l154.745-154.021c9.379-9.335 24.544-9.317 33.901.04l22.667 22.667c9.373 9.373 9.373 24.569 0 33.941L240.971 381.476c-9.373 9.372-24.569 9.372-33.942 0z"></path>
        </svg>
    </a>
    <ul class="relative accordion-collapse collapse {% if app.request.get('_route') == 'app_'~entity_name~'_index' or app.request.get('_route') == 'app_'~entity_name~'_new' %}show{% endif %}">
        <li class="relative">
            <a href="{{ path('app_'~entity_name~'_index') }}" class="{% if app.request.get('_route') == 'app_'~entity_name~'_index' %}selected bg-blue-50{% endif %} flex items-center text-xs py-4 pl-12 pr-6 h-6 overflow-hidden text-gray-700 text-ellipsis whitespace-nowrap rounded hover:text-blue-600 hover:bg-blue-50 transition duration-300 ease-in-out">All {{ entity_name|capitalize }}s</a>
        </li>
        <li class="relative">
            <a href="{{ path('app_'~entity_name~'_new') }}" class="{% if app.request.get('_route') == 'app_'~entity_name~'_new' %}selected bg-blue-50{% endif %} flex items-center text-xs py-4 pl-12 pr-6 h-6 overflow-hidden text-gray-700 text-ellipsis whitespace-nowrap rounded hover:text-blue-600 hover:bg-blue-50 transition duration-300 ease-in-out">Create {{ entity_name|capitalize }}</a>
        </li>
    </ul>
</li>