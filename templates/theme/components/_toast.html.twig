<div
    data-controller="notification"
    data-notification-delay-value="4000"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6"
    class="shadow-md transition transform duration-1000 hidden {{ bgColor }} shadow-lg mx-auto w-96 max-w-full text-sm pointer-events-auto bg-clip-padding rounded-lg block mb-3" id="static-example" role="alert" aria-live="assertive" aria-atomic="true" data-mdb-autohide="false"
    >
    <div class="{{ bgColor }} flex justify-between items-center py-2 px-3 bg-clip-padding border-b {{ bColor }} rounded-lg">
        <p class="font-bold text-white flex items-center capitalize">
            {{ svg|raw }}
            {{type}}
        </p>
        <div class="flex items-center">
{#            <p class="text-white opacity-90 text-xs">11 mins ago</p>#}
            <button data-action="notification#hide" type="button" class="btn-close btn-close-white box-content w-4 h-4 ml-2 text-white border-none rounded-none opacity-50 focus:shadow-none focus:outline-none focus:opacity-100 hover:text-white hover:opacity-75 hover:no-underline" data-mdb-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    <div class="p-3 {{ bgColor }} rounded-b-lg break-words text-white">
        {{message}}
    </div>
</div>