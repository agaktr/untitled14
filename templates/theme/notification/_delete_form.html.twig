<form class="inline" method="post" action="{{ path('app_notification_delete', {'id': notification.id}) }}"
        {{ stimulus_controller('delete_modal') }}
        {{ stimulus_action('delete_modal','submit') }}
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
    <button
            {{ stimulus_action('modal','open') }}
            data-modal-target="#deleteModal"
            {#                                                        data-bs-toggle="modal" #}
            {#                                                        data-bs-target="#deleteModal" #}
            class="text-xs inline-block py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-red-600 text-white rounded">Delete</button>
</form>